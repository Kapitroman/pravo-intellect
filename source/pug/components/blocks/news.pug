      +bread-crumbs([
        {
          text: "Главная",
          href: "index.html"
        },
        {
          text: "Новости"
        }
      ])
      h1 Новости

    .container
      .news__wrapper
        each item in news
          +card-news-item-options(item)
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
        +card-news-item
      .news__pagination
        a(href="#").news__pagination-item.news__pagination-item--active 1
        a(href="#").news__pagination-item 2
        a(href="#").news__pagination-item 3
